<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">

    </head>

    <body>
        <%- include('../includes/nav.ejs') %>

            <main class="container d-flex justify-content-center">
                <form class="border p-3 rounded w-50" action="/admin/add-product" method="POST">
                    <h3>New Product</h3>
                    <div class="form-group mt-4">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="imageUrl">Image Url</label>
                        <input type="text" name="imageUrl" id="imageUrl" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" class="form-control" step="0.01">
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea type="text" name="description" id="description" class="form-control" rows="5"></textarea>
                    </div>

                    <button class="addBtn" type="submit">Add Product</button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>