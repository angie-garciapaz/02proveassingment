<%- include('../includes/head.ejs') %>
</head>

  <body>
    <%- include('../includes/nav.ejs')%>
      <main class="container">
        <h3>My Products</h1>
          <hr>
          <% if (prods.length> 0){ %>
            <div class="row">

              <% for (let product of prods) {%>
                <div class="col-4 mb-3">
                  <article class="card">
                    <img src=" <%= product.imageUrl %>" alt="<%= product.title %>" class="card-img-top">

                    <header class="card-header">
                      <h1 class="card-title">
                        <%= product.title %>
                      </h1>
                    </header>

                    <div class="card-body">
                      <h2>
                        $<%= product.price %>
                      </h2>
                      <p>
                        <%= product.description %>
                    </div>

                    <div class="card-footer d-flex justify-content-around bg-white border-top-0">
                      <a href="/products/<%= product._id %>" class="detBtn">Details</a>
                      <% if (isAuthenticated) { %>
                      <%- include('../includes/add-to-cart.ejs', {product: product})%>
                      <% } %>
                    </div>
                </div>
                <% } %>
                  </article>
            </div>

            <% } else { %>

              <div class="container">
                <div class="jumbotron">
                  <h1>Oops!</h1>
                  <p>There are no current books listed. Let's add some!</p>
                  <a class="addBtn" href="../admin/add-product">Add Product</a>
                </div>
              </div>
              <% } %>

      </main>
      <%- include('../includes/end.ejs')%>