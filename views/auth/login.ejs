<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/nav.ejs') %>

      <main class="container">
        <div class="d-flex align-items-center flex-column mt-5">
        <form class="border p-3 rounded w-50" action="/login" method="POST" >
          <h3>Login</h3>
          <% if (errorMessage) {%>
            <div class="text-danger small border border-danger p-2 w-50 rounded">
              <span>
                <%= errorMessage %>
              </span>
            </div>
            <%} %>
              <div class="form-group mt-4">
                <label for="email">Email:</label>
                <input type="text" name="email" id="email"
                  class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid': ''%>"
                  value="<%= oldInput.email%>">
              </div>

              <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password"
                  class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid': ''%>"
                  value="<%= oldInput.password%>">
              </div>

              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="addBtn w-100" type="submit">
                Login
              </button>
        </form>
        <br>

        <a href="/reset" class="small text-center forgot-password-text">Forgot Password?</a>

        <div class="w-100 border border-top border-light my-3">
        </div>

        <a href="/signup" class="create-account-btn small">Create an Account</a>
</div>
      </main>
      <%- include('../includes/end.ejs') %>